<Window x:Class="ElectronicShopBusarev.RegistrationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicShopBusarev"
        mc:Ignorable="d"
        Title="RegistrationPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Регистрация" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <StackPanel Grid.RowSpan="2" Grid.Column="1" Grid.Row="1">
            <TextBlock Text="SecondName"/>
            <TextBox x:Name="SecondNameEntry"/>
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameEntry"/>
            <TextBlock Text="Login"/>
            <TextBox x:Name="LoginEntry"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordEntry"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,55,0,0">
            <Button Content ="Зарегистрироваться" Click="AddUserButton"  Margin="5"/>
            <Button Content="Закрыть" Click="CloseRegistrationButton" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
